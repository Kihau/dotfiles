#
# ~/.bash_aliases
#

# Shortcuts to move between directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Aliases for neovim
alias vi='nvim'
alias vim='nvim'

# Enable color support 
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
